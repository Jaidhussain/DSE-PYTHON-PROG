#practical 8 programme to create text file using 'w'

def main():
    cities=["w","mumbai","delhi","banglore","hydarabad","ahmedabad","chennai","patna","kanpur","alligarh"]
    with open("indian_cities.txt","w")as file:
        cities=file.read()
        print(cities)
        for city in cities:
            file.write(city + "\n")

    print("file create and cities written to 'indian_cities.txt'.")
    if __name__ == '__main__':
        main()

